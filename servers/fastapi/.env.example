# Presenton Backend Configuration
# Copy this file to .env and configure with your API keys

# Disable frontend configuration (required)
CAN_CHANGE_KEYS=false

# Google Gemini Configuration
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-2.0-flash-exp

# LLM Provider (set to google)
LLM=google

# Image Provider Options:
# - gemini_flash: Uses Gemini to generate images (uses GOOGLE_API_KEY above)
#   Note: Uses gemini-2.0-flash-preview-image-generation model (higher quota limits)
#   Old model: gemini-2.5-flash-image-preview (lower quota, may hit limits)
# - pexels: Stock photos from Pexels (requires PEXELS_API_KEY)
# - pixabay: Stock photos from Pixabay (requires PIXABAY_API_KEY)
# - dall-e-3: AI generated from DALL-E 3 (requires OPENAI_API_KEY)
IMAGE_PROVIDER=gemini_flash
IMAGE_PROVIDER_MODEL=gemini-2.5-flash-image-preview

# Optional: Only if using Pexels
# PEXELS_API_KEY=your_pexels_api_key_here

# Optional: Only if using Pixabay
# PIXABAY_API_KEY=your_pixabay_api_key_here

# System Configuration (REQUIRED)
USER_CONFIG_PATH=/tmp/presenton/user_config.json
TEMP_DIRECTORY=/tmp/presenton
APP_DATA_DIRECTORY=/tmp/presenton/app_data
DATABASE_URL=sqlite+aiosqlite:////tmp/presenton/presenton.db

# Optional: LLM Behavior
DISABLE_THINKING=false
EXTENDED_REASONING=false
WEB_GROUNDING=false

# Cloud Storage Configuration (Optional - for storing files in cloud bucket)
# If not set, files will be stored locally
# STORAGE_BUCKET_API_URL=https://your-storage-api.com/upload
# STORAGE_BUCKET_API_KEY=your_storage_api_key_here
